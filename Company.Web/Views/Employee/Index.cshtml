@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Image)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Address)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.PhoneBook)</th>
                <th>@Html.DisplayNameFor(E => E.HiringDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td> @employee.Name</td>
                    <td> <img src="~/Files/Images/@employee.ImageURL" height="40" width="40" alt="EmployeeImage"/></td>
                    <td> @employee.Age</td>
                    <td> @employee.Address</td>
                    <td> @Html.DisplayFor(M => employee.Salary)</td>
                    <td> @Html.DisplayFor(M => employee.Email)</td>
                    <td> @employee.PhoneBook</td>
                    <td> @employee.HiringDate</td>
                    <partial name="_ActionButttonPartialViews" model="@employee.Id.ToString()" />
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no employees</h3>
    </div>
}


