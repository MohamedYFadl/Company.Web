@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<a asp-action="Add" asp-controller="Employee" class="btn btn-primary">Add New Employee </a>
<br />
<br />
<div class="row justify-content-center align-item-center mt-5">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="SearchInput" placeholder="Search By Name .." />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success " value="Search" />
        </div>
    </form>

</div>

@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Address)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.PhoneBook)</th>
                <th>@Html.DisplayNameFor(E => E.HiringDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td> @employee.Name</td>
                    <td> @employee.Age</td>
                    <td> @employee.Address</td>
                    <td> @Html.DisplayFor(M => employee.Salary)</td>
                    <td> @Html.DisplayFor(M => employee.Email)</td>
                    <td> @employee.PhoneBook</td>
                    <td> @employee.HiringDate</td>

                    <td>
                        <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>


                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@employee.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no employees</h3>
    </div>
}


