@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<a asp-action="Add" class="btn btn-primary">Add New Employee </a>
<br />
<br />


@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.CreateAt)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Address)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.DepartmentId)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td> @employee.Name</td>
                    <td> @employee.CreateAt</td>
                    <td> @employee.Age</td>
                    <td> @employee.Address</td>
                    <td> @employee.Salary</td>
                    <td> @employee.DepartmentId</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>


                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@employee.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no employees</h3>
    </div>
}


