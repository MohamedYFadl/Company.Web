@model IEnumerable<EmployeeDTO>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<a asp-action="Add" asp-controller="Employee" class="btn btn-primary">Add New Employee </a>
<br />
<br />
<div class="row justify-content-center align-item-center mt-5">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="SearchInput" placeholder="Search By Name,PhoneBook or Email" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success " value="Search" />
        </div>
    </form>

</div>
