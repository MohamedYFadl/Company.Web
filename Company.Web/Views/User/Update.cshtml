@model UserUpdateViewModel
<h1>Update User</h1>

<div class="row">

    <div class="col-6">

        <form asp-action="Update" asp-controller="User">

            <input hidden asp-for="Id" />
            <form class="form-group">

                <div class="mb-3">
                    <label asp-for="@Model.UserName" class="col-form-label"></label>
                    <input asp-for="@Model.UserName" class="form-control" />
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-light"> Back to List </a>

            </form>
        </form>
    </div>

</div>