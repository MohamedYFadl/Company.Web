@model IEnumerable<ApplicationUser>

<h1>All Users</h1>
<form asp-action="Index" class="my-3" asp-controller="User">
    <div class="row">
        <div class="col-sm-8">
            <input type="text" placeholder="Search By Email" name="SearchInput" class="form-control"/>
        </div>
        <div class="col-sm-4">
            <input type="submit" placeholder="Search By Email" name="SearchInput" class="btn btn-success" value="Search" />
        </div>

    </div>
</form>
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.UserName)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td> @user.Id</td>
                    <td> @user.UserName</td>
                    <td> @user.Email</td>
                    <partial name="_ActionButttonPartialViews" model="@user.Id.ToString()" />

                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no Users</h3>
    </div>
}