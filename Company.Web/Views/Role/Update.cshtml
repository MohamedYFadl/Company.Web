@model RoleViewModel

@{
    ViewData["Title"] = "Update";
}
<h1>Edit Role</h1>

<div class="row">
    <div class="col-6">

        <form asp-action="Update" asp-controller="Role">

            <input hidden asp-for="Id" />
            <partial name="PartialView/CreateEditPartialView" model="@Model" />
            <div class="my-3">
                <a asp-action="AddOrRemoveUsers" asp-controller="Role" asp-route-roleId="@Model.Id" class="btn btn-primary">Add or Remove Users</a>
            </div>
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light"> Back to List </a>
        </form>
    </div>

</div>