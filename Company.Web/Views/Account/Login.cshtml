@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Login Form</h1>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login">
			<input type="email" asp-for="Email" placeholder="Email" class="email text">
			<div asp-validation-for="Email"></div>

			<input type="password" asp-for="Password" placeholder="Password" class="text">
			<div asp-validation-for="Password"></div>

			<div asp-validation-summary="All" class="text-danger"></div>
			<input type="submit" value="Login">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> SignUp Now!</a></p>
		<p><a asp-action="ForgetPassword">ForgetPassword! </a></p>
	</div>
</div>

